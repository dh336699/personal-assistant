/* 水平间距 */
.Mbti {
  display: flex;
  flex-direction: column;
  padding: 80px 30px;
  align-items: center;
  height: 100vh;
  background: white;
  box-sizing: border-box;
}
.Mbti__tip {
  margin-bottom: 20px;
}
.Mbti__question {
  margin-bottom: 30px;
}
.Mbti .van-radio {
  margin-bottom: 20px !important;
}
.Mbti__btns {
  margin-top: 50px;
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.Mbti__btns .btn {
  min-width: 80px;
}
.Mbti__btns .btn button {
  width: 100%;
}
.Answer {
  padding: 20px;
  box-sizing: border-box;
}
.Answer__item {
  margin-bottom: 20px;
}
.Answer__item .label {
  margin-bottom: 6px;
  color: #4fc08d;
}
.Answer__item .text {
  font-size: 14px;
  color: darkgray;
}
.Answer__btns {
  margin-top: 50px;
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.Answer__btns .btn {
  min-width: 80px;
}
.Answer__btns .btn button {
  width: 100%;
}